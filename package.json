{
  "name": "lms-backend-service",
  "version": "0.1.0",
  "description": "A basic learning management api service ",
  "author": "Vaibhav Gadre",
  "license": "MIT",
  "scripts": {
    "nodemon": "nodemon npm run serve ",
    "doc": "node dist//swagger/swagger.js",
    "start": "npm run serve",
    "quick-build": "npm run build-ts && npm run tslint",
    "build": "npm run remove-build &&  npm run build-ts && npm run tslint && npm run copy-static-assets",
    "serve": "node dist//server.js",
    "watch-node": "nodemon  --inspect dist//server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-sass\" \"npm run watch-ts\" \"npm run watch-node\"",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "copy-static-assets": "ts-node copy-static-assets.ts",
    "remove-build": "ts-node remove-build.ts",
    "debug": "npm run build && npm run watch-debug",
    "serve-debug": "nodemon --inspect dist//server.js",
    "build:test": "npm run build && npm run test",
    "test": "set \"NODE_ENV=test\" && mocha \"dist/spec/**/*spec.js\" --recursive -R spec",
    "cover": "set \"NODE_ENV=test\" && istanbul cover -x *.spec.js  ./node_modules/mocha/bin/_mocha \"dist/spec/**/*spec.js\" -- -R spec"
  },
  "dependencies": {
    "body-parser": "^1.18.2",
    "cors": "^2.8.4",
    "express": "^4.16.2",
    "express-joi-validator": "^2.0.0",
    "fs-extra": "^5.0.0",
    "joi": "^13.1.2",
    "jsonwebtoken": "^8.1.1",
    "lodash": "^4.17.5",
    "log4js": "^2.5.2",
    "lz-string": "^1.4.4",
    "mongoose": "^5.0.3",
    "morgan": "^1.9.0",
    "request": "^2.83.0",
    "rotating-file-stream": "^1.3.4",
    "shelljs": "^0.7.8",
    "superagent": "^3.8.2",
    "swagger-jsdoc": "^1.9.7",
    "winston": "^3.0.0-rc1",
    "winston-daily-rotate-file": "^2.0.0-rc.1"
  },
  "devDependencies": {
    "@types/body-parser": "^1.16.8",
    "@types/chai": "^4.1.2",
    "@types/chai-as-promised": "^7.1.0",
    "@types/express": "^4.11.1",
    "@types/fs-extra": "^5.0.1",
    "@types/joi": "^13.0.5",
    "@types/lodash": "^4.14.102",
    "@types/mocha": "^2.2.48",
    "@types/mongoose": "^5.0.1",
    "@types/morgan": "^1.7.32",
    "@types/node": "^8.9.0",
    "@types/sinon": "^4.3.0",
    "@types/sinon-chai": "^2.7.29",
    "@types/supertest": "^2.0.4",
    "@types/winston": "^2.3.7",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "istanbul": "^0.4.5",
    "mocha": "^5.0.2",
    "nodemon": "^1.14.12",
    "shelljs": "^0.7.7",
    "sinon": "^4.4.2",
    "sinon-chai": "^3.0.0",
    "supertest": "^3.0.0",
    "ts-jest": "^21.2.4",
    "ts-node": "^4.1.0",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.8.0",
    "typescript": "^2.7.1"
  }
}
